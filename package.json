{
  "name": "newapi-balances",
  "displayName": "NewAPI Balances",
  "description": "NewAPI balances status extension",
  "version": "0.1.0",
  "license": "MIT",
  "publisher": "eigeen",
  "repository": {
    "type": "git",
    "url": "https://github.com/littlewwwhite/newapi-balance.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "newapi.purpleBackground",
        "description": "Status bar background for balance > 75%",
        "defaults": { "dark": "#6B46C1", "light": "#805AD5" }
      },
      {
        "id": "newapi.blueBackground",
        "description": "Status bar background for balance 50-75%",
        "defaults": { "dark": "#2B6CB0", "light": "#3182CE" }
      }
    ],
    "commands": [
      {
        "command": "newapi-balances.menu",
        "title": "NewAPI Balances: Show Menu"
      },
      {
        "command": "newapi-balances.refresh",
        "title": "NewAPI Balances: Refresh"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  }
}